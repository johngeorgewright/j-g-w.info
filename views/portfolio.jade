extends layout

prepend title
  | Portfolio |&nbsp;

append stylesheets
  link(rel='stylesheet', href='/stylesheets/portfolio.css')

mixin item(name, what, tech, url, image, className)
  div(class=['span4', 'jw-portfolio-#{className}'])
    section
      .well
        h1= name
        .jw-portfolio-logo
          img(src='/images/portfolio/#{image}', alt='#{name} logo')
        dl
          dt What is it?
          dd= what
          dt Technologies
          dd Developed using #{tech}
          dt URL
          dd
            a(href=url)= url

block content
  article
